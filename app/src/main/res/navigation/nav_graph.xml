<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/roleFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.role.RoleFragment"
        android:label="@string/role"
        tools:layout="@layout/role_fragment">
        <action
            android:id="@+id/action_roleFragment_to_requesterOverviewFragment"
            app:destination="@id/seekerOverviewFragment" />
        <action
            android:id="@+id/action_roleFragment_to_helperOverviewFragment"
            app:destination="@id/buyerOverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/seekerOverviewFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.seeker.overview.SeekerOverviewFragment"
        android:label="@string/request_help"
        tools:layout="@layout/seeker_overview_fragment" >
        <action
            android:id="@+id/action_seekerOverviewFragment_to_createHelpRequestFragment"
            app:destination="@id/createHelpRequestFragment" />
    </fragment>
    <fragment
        android:id="@+id/buyerOverviewFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.buyer.RequestSelectionFragment"
        android:label="@string/provide_help"
        tools:layout="@layout/buyer_overview_fragment" >
        <action
            android:id="@+id/action_buyerOverviewFragment_to_buyerRequestDetail"
            app:destination="@id/buyerRequestDetail" />
    </fragment>
    <fragment
        android:id="@+id/buyerRequestDetail"
        android:name="de.andrestefanov.android.nearbuy.BuyerRequestDetail"
        android:label="buyer_request_detail_fragment"
        tools:layout="@layout/buyer_request_detail_fragment" />
    <fragment
        android:id="@+id/createHelpRequestFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.seeker.create.CreateHelpRequestFragment"
        android:label="Ich brauche"
        tools:layout="@layout/create_help_request_fragment" />
    <fragment
        android:id="@+id/authFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.auth.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/action_authFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_authFragment_to_roleFragment"
            app:destination="@id/roleFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_roleFragment"
            app:destination="@id/roleFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="de.andrestefanov.android.nearbuy.ui.auth.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_roleFragment"
            app:destination="@id/roleFragment" />
    </fragment>
</navigation>