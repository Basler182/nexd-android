<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/horizontalPadding">

    <TextView
        android:id="@+id/textView_enter_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Summary"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/button_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_enter_address">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            android:padding="12dp"
            android:textColor="@android:color/black">

            <TextView
                android:id="@+id/textView_shopping_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping list"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_shopping_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam scelerisque est ac quam mattis, tempus tincidunt turpis semper. Curabitur in nisl facilisis, bibendum eros a, maximus nisl. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Etiam at lorem neque. Nulla consectetur quis erat a sollicitudin. Aliquam a rhoncus nisl." />
            </ScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_edit_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Edit Shopping List"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            android:padding="12dp">
            <TextView
                android:id="@+id/textView_delivery_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Mustermann \nMusterstr. 111\n12345 Musterciteyy\n+49 178522139" />
            </ScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_edit_delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Edit Delivery Address"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView_helper_note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note for Helper"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_helper_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra Scharf und viel Knoblauch" />
            </ScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_edit_helper_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Edit Helper Note"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_check_black_24dp"
        android:tint="@color/colorPrimaryDark"
        app:borderWidth="0dp"
        app:fabCustomSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>